{* templates/portfolio.latte *}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{$personal.name} - {$personal.title}</title>
    <meta name="description" content="{$personal.description}">
    
    <!-- Compiled CSS -->
    {if isset($assets.css) && $assets.css}
    <link rel="stylesheet" href="{$assets.css}">
    {/if}
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <header class="header">
            <div class="profile-info">
                <h1>{$personal.name}</h1>
                <p class="subtitle">{$personal.title}</p>
                <p class="description">{$personal.description}</p>
                
                <div class="location">
                    ğŸ“ {$personal.location.city}, {$personal.location.country}
                </div>
                
                <div class="contact-links">
                    <a href="mailto:{$personal.email}" class="contact-link">ğŸ“§ Email</a>
                    <a href="tel:{$personal.phone}" class="contact-link">ğŸ“ Phone</a>
                    <a href="{$personal.github}" target="_blank" class="contact-link">ğŸ”— GitHub</a>
                    <a href="{$personal.linkedin}" target="_blank" class="contact-link">ğŸ’¼ LinkedIn</a>
                    <a href="{$personal.twitter}" target="_blank" class="contact-link">ğŸ¦ Twitter</a>
                </div>
            </div>
            
            <div class="profile-image">
                <div class="avatar-placeholder">
                    {$initials}
                </div>
            </div>
        </header>

        <!-- About Section -->
        <section class="section">
            <h2>About</h2>
            <p>{$about}</p>
        </section>

        <!-- Skills Section -->
        <section class="section">
            <h2>Skills</h2>
            <div class="skills-grid">
                {foreach $skills as $category => $skillList}
                <div class="skill-category">
                    <h3>{$category}</h3>
                    <div class="skill-tags">
                        {foreach $skillList as $skill}
                        <span class="skill-tag">{$skill}</span>
                        {/foreach}
                    </div>
                </div>
                {/foreach}
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <p>&copy; {$currentYear} {$personal.name}. Built with Flight + Latte.</p>
        </footer>
    </div>

    <!-- Compiled JavaScript -->
    {if isset($assets.js) && $assets.js}
    <script src="{$assets.js}"></script>
    {/if}
</body>
</html>